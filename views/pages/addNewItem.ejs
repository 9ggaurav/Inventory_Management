<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
     <%- include('../partials/header') %>
    <form class="flex flex-col gap-4 p-4 max-w-md mx-auto bg-white rounded shadow" method="POST" action="/items/new">
  <div class="flex flex-col">
    <label class="text-sm font-medium mb-1" for="new_item_name">Name:</label>
    <input class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" id="new_item_name" type="text" name="item_name" required>
  </div>

  <div class="flex flex-col">
    <label class="text-sm font-medium mb-1" for="new_item_quantity">Quantity:</label>
    <input class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" id="new_item_quantity" type="number" name="item_quantity" min="0" required>
  </div>

  <div class="flex flex-col">
    <label class="outline-1 text-sm font-medium mb-1" for="new_item_category">Category:</label>
    <select class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" name="category_id" id="new_item_category" required>
      <option disabled selected value>-- select a category --</option>
      <% categories.forEach(category => { %>
        <option value="<%= category.category_id %>"><%= category.category_name %></option>
      <% }) %>
    </select>
  </div>

  <button type="submit" class="mt-4 bg-blue-600 text-white rounded px-4 py-2 hover:bg-blue-700">
    Add Item
  </button>
</form>

</body>
</html>