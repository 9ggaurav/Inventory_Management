<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <%- include('../partials/header') %>
    
    <div class="container mx-auto px-4 py-8">
        <% if (items && items.length > 0) { %>
            <h1 class="text-4xl font-bold text-gray-800 mb-6 text-center"><%= items[0].category_name %></h1>
            
            <ul class="space-y-4 mb-6">
                <% items.map((item, index) => { %>
                    <li>
                        <div class="bg-white border-2 border-gray-300 p-6">
                            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                                <div>
                                    <span class="font-semibold text-gray-700">Item Name:</span>
                                    <p class="text-gray-800"><%= item.item_name %></p>
                                </div>
                                <div>
                                    <span class="font-semibold text-gray-700">Quantity:</span>
                                    <p class="text-gray-800"><%= item.item_quantity %></p>
                                </div>
                                <div>
                                    <span class="font-semibold text-gray-700">Category:</span>
                                    <p class="text-gray-800"><%= item.category_name %></p>
                                </div>
                                <div>
                                    <span class="font-semibold text-gray-700">Updated:</span>
                                    <p class="text-gray-800"><%= item.updated_at %></p>
                                </div>
                            </div>
                            <div>
                                <form action="/categories/<%= item.category_id %>/items/<%= item.item_id %>/delete" method="POST">
                                    <button type="submit" onclick="return confirm('Do you really wanna delete this item?')">Delete</button>
                                </form>
                            </div>
                        </div>
                        
                    </li>
                <%}) %>
            </ul>
        <% } else { %>
            <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Category Items</h1>
            <div class="bg-white border-2 border-gray-300 p-6 text-center mb-6">
                <p class="text-gray-600 text-lg">No items found in this category</p>
            </div>
        <% } %>

        <div>
            <a href="/categories" class="bg-white border-2 border-gray-300 px-4 py-2 text-blue-600 font-semibold">Back to Categories</a>
        </div>
    </div>
    
</body>
</html>