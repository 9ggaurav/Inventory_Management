<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <%- include('../partials/header') %>

    <div class="container mx-auto px-4 py-8">
        <div class="mb-6">
            <a href="/items/new" class="bg-white border-2 border-gray-300 px-4 py-2 text-blue-600 font-semibold">Add New Item</a>
        </div>
       
        <h1 class="text-4xl font-bold text-gray-800 mb-6 text-center"><%= heading %></h1>
        
        <ul class="space-y-4">
            <% items.map((item, index) => { %>
                <li>
                    <div class="bg-white border-2 border-gray-300 p-6">
                        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                            <div>
                                <span class="font-semibold text-gray-700">Item Name:</span>
                                <p class="text-gray-800"><%= item.item_name %></p>
                            </div>
                            <div>
                                <span class="font-semibold text-gray-700">Quantity:</span>
                                <p class="text-gray-800"><%= item.item_quantity %></p>
                            </div>
                            <div>
                                <span class="font-semibold text-gray-700">Category:</span>
                                <p class="text-gray-800"><%= item.category_name %></p>
                                
                            </div>
                            <div>
                                <span class="font-semibold text-gray-700">Updated:</span>
                                <p class="text-gray-800"><%= item.updated_at %></p>
                            </div>
                            <div>
                                <form action="/items/<%= item.item_id %>/update" method="POST">
                                    <button type="submit">Update</button>
                                </form>
                            </div>
                            <div>
                                <form action="/items/<%= item.item_id %>/delete" method="POST">
                                    <button type="submit" onclick="return confirm('Do you really wanna delete this item?')">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </li>
            <%}) %>
        </ul>
    </div>
</body>
</html>